@page "/"
@using HOT.Assessment.RockPaperScissor.Core.Domain.Hand

<PageTitle>Home</PageTitle>

<div class="center">
    <h1>Rock Paper Scissor</h1>
    <div>
        <div class="container">
            <Player PlayerNumber="1" PlayerScore="0"/>
            <Player PlayerNumber="2" PlayerScore="0"/>
        </div>
        <h2>Draw game</h2>
        <div>
            @foreach(HandAction hand in Enum.GetValues(typeof(HandAction)))
            {
                <HandButton HandAction="@hand" OnClickEventCallback="() => HandSelected(hand)"/>
            }
        </div>
        @message
    </div>
</div>

@code
{
    private string message = "Player 1";

    private Task HandSelected(HandAction hand)
    {
        message = hand.ToString();
        return Task.CompletedTask;
    }
}
